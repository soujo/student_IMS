<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Personal Info</title>
    <link rel="stylesheet" href="../static/css/personalInfoEdit.css">
</head>

<body>
    <div class="container">
        include ./partials/header.pug
        <div class="aside__section">
            include ./partials/aside.pug
            <form action="/student/personalInfoEdit" method="POST" enctype="multipart/form-data">
                <section>
                    include ./partials/flag.pug
                    -if(msg.length>0)
                        .error #{msg}
                    <div class="student__details">
                        <table>
                            <thead>
                                <tr>
                                    <th>Student Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Personal Details</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td><input type="text" name="name" id="name" readonly="true" value="#{firstName} #{lastName}"></td>
                                </tr>
                                <tr>
                                    <th>Roll Number</th>
                                    <td><input type="text" name="roll" id="roll" readonly="true" value="#{roll}"></td>
                                </tr>
                                <tr>
                                    <th>Batch</th>
                                    <td>
                                        <select name="batch" id="batch">
                                            <option value="">Select your batch</option>
                                            <option value="2020">2020</option>
                                            <option value="2021">2021</option>
                                            <option value="2022">2022</option>
                                            <option value="2023">2023</option>
                                            <option value="2024">2024</option>
                                            <option value="2025">2025</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr> <br>
                                    <th>Branch</th>
                                    <td>
                                        <select name="branch" id="branch">
                                            <option value="">Select your branch</option>
                                            <option value="CSE">CSE</option>
                                            <option value="IT">IT</option>
                                            <option value="ECE">ECE</option>
                                            <option value="EE">EE</option>
                                            <option value="ME">ME</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Semester</th>
                                    <td>
                                        <select name="sem" id="sem">
                                            <option value="">Select the semester</option>
                                            <option value="1st">1st</option>
                                            <option value="2nd">2nd</option>
                                            <option value="3rd">3rd</option>
                                            <option value="4th">4th</option>
                                            <option value="5th">5th</option>
                                            <option value="6th">6th</option>
                                            <option value="7th">7th</option>
                                            <option value="8th">8th</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>DOB</th>
                                    <td>
                                    <input type="date" name="dob" id="dob">
                                    </td>
                                </tr>
                                <tr>
                                    <th>Category</th>
                                    <td>
                                        <select name="category" id="category">
                                            <option value="">Select the category</option>
                                            <option value="GEN">GEN</option>
                                            <option value="OBC-A">OBC-A</option>
                                            <option value="OBC-B">OBC-B</option>
                                            <option value="SC">SC</option>
                                            <option value="ST">ST</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Gender</th>
                                    <td><input type="text" name="gender" id="gender" readonly="true" value="#{gender}"></td>
                                </tr>
                                <tr>
                                    <th>Blood Group</th>
                                    <td>
                                        <select name="bloodGroup" id="bloodGroup">
                                            <option value="">Select your blood group</option>
                                            <option value="A-">A-</option>
                                            <option value="A+">A+</option>
                                            <option value="B-">B-</option>
                                            <option value="B+">B+</option>
                                            <option value="AB-">AB-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="O-">O-</option>
                                            <option value="O+">O+</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Aadhar Number</th>
                                    <td><input type="text" name="aadhar" id="aadhar"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="picture">
                            <div class="img">Upload your image within 100kb</div>
                            <br><br>
                            <input type="file" name="image" id="image" required>
                        </div>
                    </div>
                    <br>
                    <div class="admission__details"> 
                        <table>
                            <thead>
                                <tr>
                                    <th>Admission Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Admission Year</th>
                                    <td>
                                        <select name="admissionYear" id="admissionYear">
                                            <option value="">Select your Admission Year</option>
                                            <option value="2020">2020</option>
                                            <option value="2021">2021</option>
                                            <option value="2022">2022</option>
                                            <option value="2023">2023</option>
                                            <option value="2024">2024</option>
                                            <option value="2025">2025</option>
                                        </select>
                                    </td>
                                    <th>Admission Type</th>
                                    <td>
                                        <select name="admissionType" id="admissionType">
                                            <option value="">Select your admission type</option>
                                            <option value="regular">Regular</option>
                                            <option value="lateral">Lateral</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>WBJEE/JEE Rank</th>
                                    <td><input type="text" name="wbjeeRank" id="wbjeeRank"></td>
                                    <th>JELET Rank</th>
                                    <td><input type="text" name="jeletRank" id="jeletRank"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="communication__details">
                        <table>
                            <thead>
                                <tr>
                                    <th>Communication Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Father's Name</th>
                                    <td><input type="text" name="fatherName" id="fatherName"></td>
                                    <th>Mother's name</th>
                                    <td><input type="text" name="motherName" id="motherName"></td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td><input type="email" name="email" id="email" readonly="true" value="#{email}"></td>
                                    <th>Mobile Number</th>
                                    <td><input type="text" name="phone" id="phone" readonly="true" value="#{phone}"></td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td><input type="text" name="address" id="address"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
                <input type="submit" value="Submit" id="submit">
            </form>
        </div>
        include ./partials/footer.pug
    </div>
    <script src="../static/js/personalInfo.js"></script>
</body>

</html>