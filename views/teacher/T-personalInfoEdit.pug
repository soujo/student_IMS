<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../static/css/teacher/T-personalInfoEdit.css">
    <link rel="icon" type="image/x-icon" href="../../static/images/favicon.ico">
    <title>Personal Info Edit</title>
</head>
<body>
    <div class="container">
        include ../../views/partials/teacher/header.pug
        <div class="aside__section">
            include ../../views/partials/teacher/aside.pug
            <form action="/teacher/TpersonalInfoEdit" method="POST" enctype="multipart/form-data">
                <section>    
                    include ../../views/partials/teacher/flag.pug
                    -if(msg.length>0){
                        .error #{msg}
                    -}
                    <div class="teacher__details">
                        <table>
                            <thead>
                                <tr>
                                    <th>Teacher Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Personal Details</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>
                                        input(type="text" name="name" id="name" readonly=true value=firstName+" "+lastName)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Registration Number</th>
                                    <td>
                                        input(type="text" name="regNum" id="regNum" readonly=true value=regNum)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Enrolled Year</th>
                                    <td>
                                        <select name="batch" id="batch">
                                            <option value="">Select your Enrollment Year</option>
                                            <option value="2010">2010</option>
                                            <option value="2011">2011</option>
                                            <option value="2012">2012</option>
                                            <option value="2013">2013</option>
                                            <option value="2014">2014</option>
                                            <option value="2015">2015</option>
                                            <option value="2016">2016</option>
                                            <option value="2017">2017</option>
                                            <option value="2018">2018</option>
                                            <option value="2019">2019</option>
                                            <option value="2020">2020</option>
                                            <option value="2021">2021</option>
                                            <option value="2022">2022</option>
                                            <option value="2023">2023</option>
                                            <option value="2024">2024</option>
                                            <option value="2025">2025</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Alloted Department</th>
                                    <td>
                                        input(type="text" name="dept" id="dept" readonly=true value=dept)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Alloted Semester</th>
                                    <td>
                                        input(type="text" name="sem" id="sem" readonly=true value=sem)                                    
                                    </td>
                                </tr>
                                <tr>
                                    <th>Alloted Subject</th>
                                    <td>
                                        input(type="text" name="sub" id="sub" readonly=true value=sub)                                    
                                    </td>
                                </tr>
                                <tr>
                                    <th>DOB</th>
                                    <td>
                                        input(type="date" name="dob" id="dob")
                                    </td>
                                </tr>
                                <tr>
                                    <th>Category</th>
                                    <td>
                                        <select name="category" id="category">
                                            <option value="">Select the category</option>
                                            <option value="GEN">GEN</option>
                                            <option value="OBC-A">OBC-A</option>
                                            <option value="OBC-B">OBC-B</option>
                                            <option value="SC">SC</option>
                                            <option value="ST">ST</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Gender</th>
                                    <td>
                                        input(type="text" name="gender" id="gender" readonly=true value=gender)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Blood Group</th>
                                    <td>
                                        <select name="bloodGroup" id="bloodGroup">
                                            <option value="">Select your blood group</option>
                                            <option value="A-">A-</option>
                                            <option value="A+">A+</option>
                                            <option value="B-">B-</option>
                                            <option value="B+">B+</option>
                                            <option value="AB-">AB-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="O-">O-</option>
                                            <option value="O+">O+</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Aadhar Number</th>
                                    <td>
                                        input(type="text" name="aadhar" id="aadhar" autocomplete="off")
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="picture">
                            <div class="img">Upload your image within 100kb</div>
                            <br><br>
                            <input type="file" name="image" id="image" required>
                        </div>
                    </div>
                    <br><br><br>
                    <div class="communication__details">
                        <table>
                            <thead>
                                <tr>
                                    <th>Communication Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Father's Name</th>
                                    <td>
                                        input(type="text" name="fatherName" id="fatherName" autocomplete="off")
                                    </td>
                                    <th>Mother's name</th>
                                    <td>
                                        input(type="text" name="motherName" id="motherName" autocomplete="off")
                                    </td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>
                                        input(type="text" name="email" id="emailr" readonly=true value=email)
                                    </td>
                                    <th>Mobile Number</th>
                                    <td>
                                        input(type="text" name="phone" id="phone" readonly=true value=phone)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>
                                        input(type="text" name="address" id="address" autocomplete="off")
                                    </td>
                                </tr> 
                            </tbody>
                        </table>
                    </div>
                </section>
                <input type="submit" value="Submit" id="submit">
            </form>
        </div>
        include ../../views/partials/teacher/footer.pug
    </div>
    <script src="/static/js/teacher/personalInfo.js"></script>
</body>
</html>