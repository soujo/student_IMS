<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome #{firstName} #{lastName}</title>
    <link rel="stylesheet" href="../../static/css/teacher/T-teacher.css">
</head>
<body>
    <div class="container">
        include ../../views/partials/teacher/header.pug
        <div class="aside__section">
            include ../../views/partials/teacher/aside.pug
            <section>                 
                <div class="flag" id="flag">
                    <div class="flag__icon">!</div>
                    <div class="flag__text">
                      |  Please fill the necessary information in the <a href="/teacher/TpersonalInfo">personal info</a>
                    </div>
                </div>
                
                <div class="notice__board">Notice Board</div>
                -const announcements = announcementArray;
                -let len = length;
                if len !=0
                    -for(let i in announcements){
                        .notification
                            .notification__title #{announcements[i].heading}
                            .notification__text #{announcements[i].desc}
                            .notification__more By : #{announcements[i].by}
                    -}
                else 
                    <li style="align-self:flex-start;margin-left:3rem;">#{msg}</li>
            </section>
        </div>
        include ../../views/partials/teacher/footer.pug
    </div>
    <script src="/static/js/teacher/teacher.js"></script>
</body>
</html>