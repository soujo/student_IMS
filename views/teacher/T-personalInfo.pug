<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Info</title>
    <link rel="stylesheet" href="../../static/css/teacher/T-personalInfo.css">
</head>
<body>
    <div class="container">
        include ../../views/partials/teacher/header.pug
        <div class="aside__section">
            include ../../views/partials/teacher/aside.pug
            <section>    
                include ../../views/partials/teacher/flag.pug 
                -if(msg.length>0){
                    .success #{msg}
                -}
                <div class="teacher__details">                    
                    <a href="/teacher/TpersonalInfoEdit">
                        <div class="edit">Edit</div>
                    </a>
                    <table>
                        <thead>
                            <tr>
                                <th>Teacher Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>Personal Details</th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>#{firstName} #{lastName}</td>
                            </tr>
                            <tr>
                                <th>Registration Number</th>
                                <td>#{regNum}</td>
                            </tr>
                            <tr>
                                <th>Enrolled Year</th>
                                <td>#{batch}</td>
                            </tr>
                            <tr>
                                <th>Alloted Department</th>
                                <td>#{dept}</td>
                            </tr>
                            <tr>
                                <th>Alloted Semester</th>
                                <td>#{sem}</td>
                            </tr>
                            <tr>
                                <th>Alloted Subject</th>
                                <td>#{sub}</td>
                            </tr>
                            <tr>
                                <th>DOB</th>
                                <td>#{dob}</td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>#{category}</td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td>#{gender}</td>
                            </tr>
                            <tr>
                                <th>Blood Group</th>
                                <td>#{bloodGroup}</td>
                            </tr>
                            <tr>
                                <th>Aadhar Number</th>
                                <td>#{aadhar}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="picture">
                        img(src=image, alt="Your image")
                    </div>
                </div>
                <br><br><br>
                <div class="communication__details">
                    <table>
                        <thead>
                            <tr>
                                <th>Communication Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>Father's Name</th>
                                <td>#{fatherName}</td>
                                <th>Mother's name</th>
                                <td>#{motherName}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>#{email}</td>
                                <th>Mobile Number</th>
                                <td>#{phone}</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td>#{address}</td>
                            </tr> 
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
        include ../../views/partials/teacher/footer.pug
    </div>
    <script src="/static/js/teacher/personalInfo.js"></script>
</body>
</html>