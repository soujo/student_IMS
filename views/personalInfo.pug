<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Info</title>
    <link rel="stylesheet" href="../static/css/personalInfo.css">
</head>

<body>
    <div class="container">
        include ./partials/header.pug
        <div class="aside__section">
            include ./partials/aside.pug
            <section>
                include ./partials/flag.pug
                -if(msg.length>0){
                    .success #{msg}
                -}
                <div class="student__details">
                    <a href="/student/personalInfoEdit">
                        <div class="edit">Edit</div>
                    </a>
                    <table>
                        <thead>
                            <tr>
                                <th>Student Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>Personal Details</th>
                                <td></td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>#{firstName} #{lastName}</td>
                            </tr>
                            <tr>
                                <th>Roll Number</th>
                                <td>#{roll}</td>
                            </tr>
                            <tr>
                                <th>Batch</th>
                                <td>#{batch}</td>
                            </tr>
                            <tr>
                                <th>Branch</th>
                                <td>#{branch}</td>
                            </tr>
                            <tr>
                                <th>Semester</th>
                                <td>#{sem}</td>
                            </tr>
                            <tr>
                                <th>DOB</th>
                                <td>#{dob}</td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>#{category}</td>
                            </tr>
                            <tr>
                                <th>Gender</th>
                                <td>#{gender}</td>
                            </tr>
                            <tr>
                                <th>Blood Group</th>
                                <td>#{bloodGroup}</td>
                            </tr>
                            <tr>
                                <th>Aadhar Number</th>
                                <td>#{aadhar}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="picture">
                        img(src=image, alt="Your image") 
                    </div>
                </div>                
                <div class="admission__details">
                    <table>
                        <thead>
                            <tr>
                                <th>Admission Details</th>
                            </tr>
                        </thead> 
                        <tbody>
                            <tr>
                                <th>Admission Year</th>
                                <td>#{admissionYear}</td>
                                <th>Admission Type</th>
                                <td>#{admissionType}</td>
                            </tr>
                            <tr>
                                <th>WBJEE/JEE Rank</th>
                                <td>#{wbjeeRank}</td>
                                <th>JELET Rank</th>
                                <td>#{jeletRank}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>                
                <div class="communication__details">
                    <table>
                        <thead>
                            <tr>
                                <th>Communication Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>Father's Name</th>
                                <td>#{fatherName}</td>
                                <th>Mother's name</th>
                                <td>#{motherName}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>#{email}</td>
                                <th>Mobile Number</th>
                                <td>#{phone}</td>
                            </tr>
                            <tr>
                                <th>Address</th>
                                <td>#{address}</td>
                            </tr> 
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
        include ./partials/footer.pug
    </div>
    <script src="../static/js/personalInfo.js"></script>
</body>

</html>